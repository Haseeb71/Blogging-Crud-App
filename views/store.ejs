<!DOCTYPE html>
<html lang="en">
 
<body class="bg-warning">

    <section>
    <div class="container m-auto mt-2 p-5">
        <div class="row ">
            <div class="col-md-6 mb-3" >
                <h1 class="text-align-center">Showing All Records</h1>
            </div>
        </div>
        <table class="table table-striped w-50">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">CGPA</th>
                <th scope="col">Edit / Delete /  Details</th>
            </tr>
            </thead>
            <% total.forEach(total=>{ %>
            <tbody>
              <tr>
                <th scope="row"><%= total.name %></th>
                
                <td> <%= total.cgpa %></td>
                <td> <a href="/edit/<%= total._id%>" class="btn btn-secondary btn-sm">Edit</a>
                    <a href="/delete/<%= total._id%>" class="btn btn-danger btn-sm">delete</a>
                    <a href="/users/<%= total._id%>" class="btn btn-secondary btn-sm">details</a>
                </td>
              </tr>
            </tbody>
            <% }) %>
          </table>
    </div>
   
</section>


<section>
  <div class="container">
    <div class="row ms-5">
      <div class="col-md-6">
        <% if (pages > 0) { %>
          <nav aria-label="Page navigation example">
            <ul class="pagination ">
              <% if (current == 1) { %>
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">First</a>
              </li>
              <% } else { %>
              <li class="page-item"><a class="page-link" href="/store/1">First</a></li>
              <% } %>
              <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
               <% if (i !== 1) { %>
              <li class="page-item disabled"><a class="page-link" href="#">..</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
              <li class="page-item"><a class="page-link" href="#"><%=i %></a></li>
              <% } else { %>
              <li class="page-item"><a class="page-link" href="/store/<%=i %>"><%=i %></a></li>
              <% } %>
              <% if (i == Number(current) + 4 && i < pages) { %>
                <li class="page-item disabled"><a class="page-link" href="#">..</a></li>
                <% } %>
                <% } %>
                <% if (current == pages) { %>
                  <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
                  <% } else { %>
                    <li class="page-item"><a class="page-link" href="/store/<%=i %>">Last</a></li>
                    <% } %>
            </ul>
            <% } %>
          </nav>
      </div>
    </div>
  </div>
</section>
</body>
</html>